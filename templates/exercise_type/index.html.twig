<div class="container">
    <div class="row">
        <h1>Exercise Types</h1>
        {% for exerciseType in exerciseTypes %}
            <div class="col-12 mb-3">
                <div class="q-container p-4">
                    <div class="row">
                        <div class="col">
                            <a class="q-title" href="{{ path('app_exercise_type_show', { id: exerciseType.id }) }}">{{ exerciseType.name }}</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        <br>
        <div class="mt-3">
            <form action="{{ path('app_new_exercise_type') }}" method="POST">
                <div><label for="name">Name </label><input type="text" name="name"></div>
                <div><button type="submit">Submit</button></div>
            </form>
        </div>
    </div>
