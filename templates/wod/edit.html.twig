{% extends 'base.html.twig' %}

{% block body %}
    <div class="container" ng-app="myApp" ng-controller="RxWodEditCtrl" data-wod-id="{{ wod.id }}">
        <div class="row">
            <div class="col-12">
                <div>
                    <div class="q-container-show p-4">
                        <div class="row">
                            <div class="col">
                                <div class="q-container-show q-display p-3">
                                    <h2>Edit Wod <span ng-bind="wod.wodDate | date:'MM/dd/yyyy'"></span></h2>
                                    <div class="btn btn-md btn-success pull-right" ng-click="deleteWod()">
                                        <span class="fa fa-trash"></span> Delete
                                    </div>
                                    <div class="form-group">
                                        <div class="form-group">
                                            <form class="form-inline" novalidate>
                                                <div><label for="date">Date</label> <input type="date" ng-model="wod.wodDate"></div><br>
                                                <div><label for="date">Created</label> {: wod.createdAt | date:'MM/dd/yyyy':}<br>
                                                <label for="type">Type</label> <select ng-model="wod.type" ng-change="updateScore()">
                                                    <option ng-repeat="type in wodTypes" ng-selected="type == wod.type">{:type:}</option>
                                                </select>
                                                <div><label for="date">Updated On</label> {: wod.updatedOn | date:'MM/dd/yyyy':}<br>
                                                <div><label for="wod">Wod </label> <textarea rows="4" style="width: 33%; height: 300px; display: block; resize: vertical;" ng-model="wod.wod" name="wod"></textarea></div>
                                                <br>
                                                <div><div class="btn btn-primary" ng-click="editWod()">Submit</div>
                                            </form>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br>
    </div>
{% endblock %}
